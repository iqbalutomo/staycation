{
    "swagger": "2.0",
    "info": {
        "description": "This is API for booking hotel with Xendit payment gateway",
        "title": "Staycation API",
        "termsOfService": "https://github.com/iqbalutomo/staycation",
        "contact": {
            "name": "API Support",
